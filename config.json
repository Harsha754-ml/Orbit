{
  "hotkey": "MButton",
  "radius": 100,
  "primaryRadius": 100,
  "groupRadius": 75,
  "activeTheme": "Dark Neon",
  "animationSpeed": 1.0,
  "enableSoundEffects": true,
  "gestureNavigationEnabled": true,
  "devMode": false,
  "showHoverLabels": true,
  "requireCtrlInBrowsers": true,
  "restrictToDesktop": true,
  "browserList": [
    "chrome.exe",
    "msedge.exe",
    "firefox.exe"
  ],
  "nestingDepthLimit": 5,
  "actions": [
    {
      "type": "command",
      "label": "VS Code",
      "icon": "vscode.svg",
      "command": "auto-detect"
    },
    {
      "type": "command",
      "label": "Terminal",
      "icon": "terminal.svg",
      "command": "auto-detect"
    },
    {
      "type": "group",
      "label": "Power",
      "icon": "shutdown.svg",
      "children": [
        { "type": "command", "label": "Shutdown", "icon": "shutdown.svg", "command": "shutdown /s /t 10" },
        { "type": "command", "label": "Restart", "icon": "restart.svg", "command": "shutdown /r /t 10" },
        { "type": "command", "label": "Lock", "icon": "lock.svg", "command": "rundll32.exe user32.dll,LockWorkStation" }
      ]
    },
    {
      "type": "command",
      "label": "Task Manager",
      "icon": "taskmanager.svg",
      "command": "taskmgr.exe"
    },
    {
      "type": "group",
      "label": "Custom",
      "icon": "custom.svg",
      "children": [
        { "type": "command", "label": "Add New", "icon": "plus.svg", "command": "ui:open-add-action" }
      ]
    },
    {
      "type": "group",
      "label": "Settings",
      "icon": "settings.svg",
      "children": [
        { "type": "command", "label": "Toggle Labels", "icon": "label.svg", "command": "ui:toggle-labels" },
        { "type": "command", "label": "Toggle Sound", "icon": "sound.svg", "command": "ui:toggle-sound" },
        { "type": "command", "label": "Toggle DevMode", "icon": "code.svg", "command": "ui:toggle-dev" }
      ]
    },
    {
      "type": "group",
      "label": "Themes",
      "icon": "themes.svg",
      "children": [
        { "type": "command", "label": "Dark Neon", "icon": "themes.svg", "command": "theme:Dark Neon" },
        { "type": "command", "label": "Minimal Frost", "icon": "themes.svg", "command": "theme:Minimal Frost" },
        { "type": "command", "label": "Cyber Blue", "icon": "themes.svg", "command": "theme:Cyber Blue" },
        { "type": "command", "label": "Mono Glass", "icon": "themes.svg", "command": "theme:Mono Glass" }
      ]
    },
    {
      "type": "custom",
      "label": "Web Search",
      "icon": "web.svg",
      "path": "https://www.google.com"
    }
  ]
}
